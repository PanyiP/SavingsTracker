<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SavingsTracker.ViewModels"
             x:Name="SavingsPageName"
             x:Class="SavingsTracker.Views.NewSavingAccountPage">

   <ContentPage.BindingContext>
      <vm:NewSavingAccountPageViewModel />
   </ContentPage.BindingContext>

   <ContentPage.Content>
      <StackLayout>
         <Label Text="Új Megtakarítási számla" HorizontalOptions="Center" Margin="10" FontSize="24" FontAttributes="Bold" />
         <Entry IsPassword="False" Text="{Binding SavingAccount.Name}" Placeholder="Név" Margin="10" />
         <Entry IsPassword="False" Text="{Binding SavingAccount.Currency}" Placeholder="Pénznem" Margin="10" />
         <Button Text="Mentés" Command="{Binding SaveCommand}" Margin="10" />
      </StackLayout>
   </ContentPage.Content>
</ContentPage>