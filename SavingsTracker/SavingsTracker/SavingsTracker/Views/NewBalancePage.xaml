<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SavingsTracker.ViewModels"
             xmlns:resource="clr-namespace:SavingsTracker.Resources"
             x:Class="SavingsTracker.Views.NewBalancePage">

   <ContentPage.BindingContext>
      <vm:NewBalancePageViewModel />
   </ContentPage.BindingContext>

   <ContentPage.Content>
      <StackLayout>
         <Entry IsPassword="False" Text="{Binding Balance.Value}" Keyboard="Numeric" Placeholder="{x:Static resource:AppResources.Balance}" Margin="10" />
         <Entry IsPassword="False" Text="{Binding Balance.DateTime}" Placeholder="{x:Static resource:AppResources.Date}" Margin="10" />
         <Button Text="{x:Static resource:AppResources.Save}" Command="{Binding SaveCommand}" Margin="10" />
      </StackLayout>
   </ContentPage.Content>
   
</ContentPage>